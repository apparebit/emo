\newcommand\emo@wordbox[1]{%
    \fcolorbox{emo@canary@frameinner}{white}{#1}}
\newcommand\emo@linebox[1]{%
    \fcolorbox{emo@canary@frameouter}{emo@canary@background}{#1}}
